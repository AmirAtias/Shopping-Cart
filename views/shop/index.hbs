<div class="row">
  <div class=" col-sm-6 col-md-4 offset-md-3 offset-sm-3 mt-4 mb-3 ">
    <div id="success" class="{{#if noMessages}}d-none{{/if}}alert alert-success">
    {{successMsg}}
    </div>
  </div>
</div>

{{# each products}}
<div class="row  ml-5 col-sm-12 col-lg-12">
  {{# each this}}
  <div class="card col-sm-8 col-md-3 m-1" style="width: 20rem;">
    <img class="card-img-top"
      src="{{this.imagePath}}"
      alt="Card image cap" class="img-responsive">
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text ">{{this.description}} </p>
      <div>
        <div class="price float-left ">${{this.price}}</div>
        <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right">Buy</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
